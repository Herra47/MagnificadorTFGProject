<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fi.upm.tfg.magnificador"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fi.upm.tfg.magnificador.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fi.upm.tfg.magnificador.Menu1ButtonActivity"
            android:label="@string/title_activity_menu1_button" >
        </activity>
        <activity
            android:name="fi.upm.tfg.magnificador.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="fi.upm.tfg.magnificador.MagnificadorActivity"
            android:label="@string/title_activity_camera"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >
        </activity>
        <activity
            android:name="fi.upm.tfg.magnificador.Menu1ButtonDrawerActivity"
            android:label="@string/title_activity_menu1_button_drawer" >
        </activity>
        <!-- configure this activity to use landscape orientation -->
        <activity
            android:name="fi.upm.tfg.magnificador.UmbralActivity"
            android:label="@string/title_activity_umbral" >
        </activity>
    </application>

</manifest>
