<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/modesLayout">
    <LinearLayout
        android:layout_height="0.0dip"
        android:layout_width="fill_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_margin="4dp">

        <Button
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="@string/button_rgb"
            android:textColor="@color/text_black_white"
            android:id="@+id/rgbButton"
            style="@style/button4x1land"
            android:background="@drawable/button_black_white"
            android:layout_marginRight="4dp"
            />
        <Button
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="@string/button_gray"
            android:textColor="@color/text_black_white"
            android:id="@+id/grayButton"
            style="@style/button4x1land"
            android:background="@drawable/button_black_white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_height="0.0dip"
        android:layout_width="fill_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp">

        <Button
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="@string/button_invert"
            android:textColor="@color/text_black_white"
            android:id="@+id/invertButton"
            style="@style/button4x1land"
            android:background="@drawable/button_black_white"
            android:layout_marginRight="4dp"/>
        <Button
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="@string/button_high_contrast"
            android:textColor="@color/text_black_white"
            android:id="@+id/highContrastButton"
            style="@style/button4x1land"
            android:background="@drawable/button_black_white" />
    </LinearLayout>
</LinearLayout>
