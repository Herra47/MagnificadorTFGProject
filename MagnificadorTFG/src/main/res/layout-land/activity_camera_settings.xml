<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/mainLayout">

    <LinearLayout
        android:layout_height="0.0dip"
        android:layout_width="fill_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_margin="4dp">

    <Button
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:text="@string/button_encender_flash"
        android:textSize="45sp"
        android:textColor="@color/text_black_white"
        android:id="@+id/flashButton"
        style="@style/button4x1land"
        android:background="@drawable/button_black_white"
        android:layout_marginRight="4dp"/>

    <Button
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:text="@string/button_encender_macro"
        android:textSize="45sp"
        android:id="@+id/macroButton"
        style="@style/button4x1land"
        android:background="@drawable/button_black_white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="0.0dip"
        android:layout_width="fill_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp">

    <Button
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.49"
        android:text="@string/button_encender_stab"
        android:textSize="45sp"
        android:id="@+id/stabButton"
        android:background="@drawable/button_black_white"
        style="@style/button4x1land"/>


    </LinearLayout>
</LinearLayout>
